<Page x:Class="Tutorial.MyFrames.Profile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Tutorial.MyFrames"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Profile">

    <Grid>
        <Button x:Name="Back" Content="Назад" Width="50" Height="20" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,10,10,0" Click="Back_Click"/>
        <TextBlock Text="Профиль" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Top" 
                   Margin="10"/>
        <StackPanel Margin="10,50,10,10">
            <TextBlock x:Name="UserNameTxb" Text="Имя пользователя: Admin" FontSize="16" Margin="0,0,0,10"/>
            <TextBlock x:Name="UserEmailTxb" Text="Электронная почта: admin@admin.com" FontSize="16" Margin="0,0,0,10"/>
            <Button Content="Редактировать профиль" Width="150" Height="30" HorizontalAlignment="Left" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Page>
